{
  "name": "bookmark-manager",
  "private": true,
  "version": "0.0.0",
  "description": "Bookmark Manager - Full-stack application with React frontend and NestJS/Express backend",
  "scripts": {
    "dev": "npm run dev --prefix frontend",
    "dev:backend": "npm run start:dev --prefix backend",
    "dev:all": "concurrently --names \"frontend,backend\" --prefix-colors \"blue,green\" \"npm run dev\" \"npm run dev:backend\"",
    "build": "npm run build --prefix frontend",
    "build:backend": "npm run build --prefix backend",
    "build:all": "npm run build:backend && npm run build",
    "start:backend": "npm run start:prod --prefix backend",
    "server": "npm run server --prefix backend",
    "lint": "npm run lint --prefix frontend",
    "lint:backend": "npm run lint --prefix backend"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
